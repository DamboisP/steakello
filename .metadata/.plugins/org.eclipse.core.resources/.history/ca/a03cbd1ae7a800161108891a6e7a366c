package view;

import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JButton;

import view.GameViewGUI.Panel;

public class Menu {

	private int screenWidth;
	private int screenHeight;
	
	private Image background;
	
	public Menu(int screenWidth, int screenHeight){
		
		this.screenWidth = screenWidth;
		this.screenHeight = screenHeight;
		
		try {
			background = ImageIO.read(new File("src/images/background.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
				
	}
	public void drawMenu(Graphics g, Panel panel ){
		g.drawImage(background, 0, 0, screenWidth, screenHeight, null);
		panel.add(new JButton("Local 2P"));
		panel.add(new JButton("Online 2P"));
	}
}
