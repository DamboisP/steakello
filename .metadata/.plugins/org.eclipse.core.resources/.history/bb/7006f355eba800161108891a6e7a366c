package view;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JButton;
import javax.swing.JPanel;

public class Menu extends JPanel{

	private int screenWidth;
	private int screenHeight;
	
	private Image background;
	
	private JButton local2p;
	private JButton online2p;
	
	private int buttonWidth;
	private int buttonHeight;
	
	public Menu(int screenWidth, int screenHeight){
		
		this.screenWidth = screenWidth;
		this.screenHeight = screenHeight;
		
		try {
			background = ImageIO.read(new File("src/images/background.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		buttonWidth = screenWidth/5;
		buttonHeight = screenWidth/5;
		local2p = new JButton("Local 2P");
		online2p = new JButton("Online 2P");
		local2p.setPreferredSize(new Dimension(buttonWidth,buttonHeight));
		online2p.setPreferredSize(new Dimension(buttonWidth,buttonHeight));
		local2p.setLocation(500, 400);
		online2p.setLocation(500, 400);
		this.add(local2p);
		this.add(online2p);
	}

	 @Override
     public void paintComponent(Graphics g) {
			g.drawImage(background, 0, 0, screenWidth, screenHeight, null);
	 }
	 
}
